{{ 'hero-banner.css' | asset_url | stylesheet_tag }}

{% liquid
  assign section_width = section.settings.section_width
  assign text_color = section.settings.text_color
  
  assign bg_color = section.settings.bg_color
  
  assign button_text1 = section.settings.button_text1
  assign button_link1 = section.settings.button_link1
  assign button_style1 = section.settings.button_style1
  

  assign button_text2 = section.settings.button_text2
  assign button_link2 = section.settings.button_link2
  assign button_style2 = section.settings.button_style2
  
%}

{%- style -%}
  #section-{{section.id}} {
    --PT: {{ section.settings.padding_top }}px;
    --PB: {{ section.settings.padding_bottom }}px;
    --color-bg: {{ bg_color }};
    --color-text: {{text_color}};

    --color-button-text: {{section.settings.button_color1}};
    --color-button-bg: {{section.settings.button_color1}}
  }
{%- endstyle -%}
 
<section class="hero-banner-section {{ text_color }}" id="section-{{ section.id }}">
  <div class="hero-banner-wrapper {{ section_width }}">
    <div class="hero-banner-text">
      <div class="hero-banner__box">
        {% if section.settings.pre_text != blank %}
          <div class="pre-text">
            <p class="sh2">{{ section.settings.pre_text }}</p>
          </div>
        {% endif %}
        {% if section.settings.title != blank %}
          <h2 class="section-heading">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.text != blank %}
          <div class="hero-banner-rte">
            {{ section.settings.text }}
          </div>
        {% endif %}
        <div class="hero-banner--rating">
          <div class="rating-icon">
            <svg width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4.36875 16.5L5.5875 11.2312L1.5 7.6875L6.9 7.21875L9 2.25L11.1 7.21875L16.5 7.6875L12.4125 11.2312L13.6313 16.5L9 13.7062L4.36875 16.5Z" fill="currentColor"/>
            </svg>
            <svg width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4.36875 16.5L5.5875 11.2312L1.5 7.6875L6.9 7.21875L9 2.25L11.1 7.21875L16.5 7.6875L12.4125 11.2312L13.6313 16.5L9 13.7062L4.36875 16.5Z" fill="currentColor"/>
            </svg>
            <svg width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4.36875 16.5L5.5875 11.2312L1.5 7.6875L6.9 7.21875L9 2.25L11.1 7.21875L16.5 7.6875L12.4125 11.2312L13.6313 16.5L9 13.7062L4.36875 16.5Z" fill="currentColor"/>
            </svg>
            <svg width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4.36875 16.5L5.5875 11.2312L1.5 7.6875L6.9 7.21875L9 2.25L11.1 7.21875L16.5 7.6875L12.4125 11.2312L13.6313 16.5L9 13.7062L4.36875 16.5Z" fill="currentColor"/>
            </svg>
            <svg width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4.36875 16.5L5.5875 11.2312L1.5 7.6875L6.9 7.21875L9 2.25L11.1 7.21875L16.5 7.6875L12.4125 11.2312L13.6313 16.5L9 13.7062L4.36875 16.5Z" fill="currentColor"/>
            </svg>    
          </div>      
          <span>10,000+ 5 Star Reviews</span>
        </div>
        {% if button_text1 != blank or button_text2 != blank %}
          <div class="hero-banner-btns">
            {%- if button_text1 != blank -%}
                <div class="hero-banner-button--item">
                <a href="{{ button_link1 }}" class="btn btn--solid-border {{ button_style1 }}" aria-label="{{ button_text1 }}">
                  <span>{{ button_text1 }}</span>
                  {% if section.settings.show_button_arrow %}{% render 'button-arrow' %}{% endif %}
                </a>
              </div>
            {%- endif -%}
  
            {%- if button_text2 != blank -%}
                <div class="hero-banner-button--item">
                  <a href="{{ button_link2 }}" class="btn {{ button_style2 }} " aria-label="{{ button_text2 }}">{{ button_text2 }}</a>
                </div>
            {%- endif -%}
          </div>
        {% endif %}
      </div>
    </div> 
    <div class="hero-banner-image">
      {{ section.settings.banner | image_url:width:1000 | image_tag }}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Hero Banner",
    "settings": [
      {
        "type":"image_picker",
        "id":"banner",
        "label":"Banner image"
      },
      {
        "type":"text",
        "id":"pre_text",
        "label":"Pre Text"
      },
      {
        "type":"text",
        "id":"title",
        "label":"Title"
      },
      {
        "type":"richtext",
        "id":"text",
        "label":"Text"
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "button_text1",
        "label": "Button 1 text",
        "default": "Button text 1",
        "info": "Leave blank to link entire image"
      },
      {
        "type": "url",
        "id": "button_link1",
        "label": "Button 1 Link"
      },
      {
        "type": "select",
        "id": "button_style1",
        "label": "Button 1 style",
        "default": "btn--primary",
        "options": [
          { "label": "Primary", "value": "btn--primary" },
          { "label": "Secondary", "value": "btn--secondary" }
        ]
      },
      {
        "type": "checkbox",
        "id": "show_button_arrow",
        "label": "Show Button Arrow",
        "default": true
      },
      {
        "type": "text",
        "id": "button_text2",
        "label": "Button 2 Text",
        "default": "Button text 2",
        "info": "Leave blank to link entire image"
      },
      {
        "type": "url",
        "id": "button_link2",
        "label": "Button 2 Link"
      },
      {
        "type": "select",
        "id": "button_style2",
        "label": "Button 2 Style",
        "default": "btn--primary",
        "options": [
          { "label": "Primary", "value": "btn--primary" },
          { "label": "Secondary", "value": "btn--secondary" }
        ]
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background",
        "default": "#F2EADF"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#101820"
      }
    ],
    "presets":[
      {
        "name":"Hero Banner"
      }
    ]
  }
{% endschema %}