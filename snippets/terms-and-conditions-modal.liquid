<style>

  .tac-modal {
    position: fixed; 
    z-index: 9999999999; 
    left: 0;
    top: 0;
    width: 100%; 
    height: 100%;
    overflow: auto; 
    backdrop-filter: blur(4px);
    transform: translateX(100%);
    transition: all 0.3s;
    overflow: hidden;
  }

  .tac-modal-content {
    background-color: #fff;
    padding: 0 24px 24px;
    width: 80%;
    border-radius: 16px;
    margin: 20px;
    max-width: 828px;
    float: right;
    height: calc(100% - 40px);
    display: flex;
    flex-direction: column;
  }

  .tac-modal-content h2 {
    color: #101820;
    font-family: var(--body-font);
    font-size: 22px;
    font-style: normal;
    font-weight: 600;
    line-height: 140%;
    padding: 0 0 16px;
    margin: 32px 0 0;
  }

  .tac-modal-content h2:first-child {
    padding-bottom: 32px;
  }

  .tac-modal-content h3 {
    color: #101820;
    font-family: var(--body-font);
    font-size: 18px;
    font-style: normal;
    font-weight: 700;
    line-height: 140%; 
  }

  .tac-modal-content h4 {
    color: #101820;
    font-family: var(--body-font);
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 140%;
    letter-spacing: normal;
    text-transform: initial;
  }

  .tac-modal-content p {
    color: #101820;
    font-family: var(--body-font);
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 140%; 
  }

  .tac-modal-close {
    color: #101820;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 140%;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 24px 0 2px;
  }

  .tac-modal-close:hover,
  .tac-modal-close:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
  }

  .tac-modal-content-inner {
    overflow: auto;
  }

  .tac-modal-content-inner::-webkit-scrollbar {
    width: 6px;
  }
  
  .tac-modal-content-inner::-webkit-scrollbar-thumb {
    border-radius: 24px;
    background: rgba(16, 24, 32, 0.24);
  }

  @media (max-width: 768px) {
    .tac-modal-content {
      width: 100%;
      margin: 0;
      height: 100%;
      border-radius: unset;
      padding: 0 16px 24px;
    }
  }
</style>

<div id="tac-modal" class="tac-modal">
  <div class="tac-modal-content">
    <span class="tac-modal-close"> 
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M20 12.5L4 12.5L20 12.5ZM4 12.5L10 6.5L4 12.5ZM4 12.5L10 18.5L4 12.5Z" fill="#101820"/>
        <path d="M20 12.5L4 12.5M4 12.5L10 6.5M4 12.5L10 18.5" stroke="#735D49" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      Return
    </span>
    <div class="tac-modal-content-inner">
      {{ settings.cart_drawer_tac }}
    </div>
  </div>
</div>