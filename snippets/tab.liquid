{%- liquid
  assign output_tab = true
  if content == blank
    assign output_tab = false
  endif
-%}

{%- if output_tab -%}
  <div class="collapsibles-wrapper collapsibles-wrapper--border-bottom {% if title == 'Details' %}detail--tab{% endif %}">
    <button type="button"
      class="label collapsible-trigger collapsible-trigger-btn collapsible-trigger-btn--borders collapsible--auto-height {% if title == 'Details' and product.id == 5314854551715 %}is-open{% elsif force_open %} is-open{% endif %}" aria-controls="Product-content-{{ id }}"
      {% if title == 'Details' and product.id == '5314854551715' %}aria-expanded="true"{% elsif force_open %}aria-expanded="true"{% endif %} >
      {{ title }}
      {%- render 'collapsible-icons' -%}
    </button>
    <div id="Product-content-{{ id }}"
      class="collapsible-content collapsible-content--all {% if title == 'Details' and product.id == 5314854551715 %}is-open{% elsif force_open %} is-open{% endif %} "
      {% if title == 'Details' and product.id == 5314854551715 %}style="height: auto;"{% elsif force_open %}style="height: auto;"{% endif %}>
      <div class="collapsible-content__inner rte">
        {{ content }}
      </div>
    </div>
  </div>
{%- endif -%}
